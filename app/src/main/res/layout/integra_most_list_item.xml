<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/shop_im"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/shop_name"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toTopOf="@+id/shop_im"
        app:layout_constraintLeft_toRightOf="@+id/shop_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快钱电签POS"
        android:textColor="#ff646262"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/shop_price"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/shop_im"
        app:layout_constraintLeft_toLeftOf="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥120"
        android:textColor="#FFAF32"
        android:textSize="15sp"
        />

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/shop_price"
        app:layout_constraintBottom_toBottomOf="@+id/shop_price"
        app:layout_constraintTop_toTopOf="@+id/shop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/台"
        android:textColor="#ffa0a0a0"
        android:textSize="15sp"
        />



    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/shop_im"
        android:layout_marginTop="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageView
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ibv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>